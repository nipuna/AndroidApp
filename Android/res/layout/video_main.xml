<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
	  	android:id="@+id/header_image"
	  	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
	  	android:src="@drawable/tekpub_logo_header"
	  	android:padding="5dip"
	  	android:layout_gravity="left" 
  	/>
    <TextView
		android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/header_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="My Application"
        android:textStyle="bold"
        android:textColor="@color/category_name_color"
         />
  <TextView
    android:id="@+id/separator_text"
    android:layout_below="@+id/header_image"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dip"
    android:padding="5dip"
    android:background="@color/separator_bg_color"
    android:textColor="@color/separator_text_color"
    android:textStyle="bold"
    android:text="@string/video_category_details_separator"/>
  <TextView  
    android:id="@+id/details_line"
    android:layout_below="@+id/separator_text"
    android:layout_width="fill_parent"
    android:padding="6dip"
    android:layout_height="wrap_content"
    android:text="Lorem ipsum dolor sit alem" />
  <TextView
    android:id="@+id/list_separator"
    android:layout_below="@+id/details_line"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:background="@color/separator_bg_color"
    android:textColor="@color/separator_text_color"
    android:textStyle="bold"
    android:text="@string/episode_header_separator"/>
  <ListView
    android:id="@android:id/list"
    android:layout_below="@+id/list_separator"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:drawSelectorOnTop="false"
   />
</RelativeLayout>
